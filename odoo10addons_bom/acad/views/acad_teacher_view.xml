            <field name="model">acad.teacher</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="course_ids"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="acad_teacher_view_tree" model="ir.ui.view">
            <field name="name">acad.teacher.view.tree</field>
            <field name="model">acad.teacher</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="acad_teacher_action" model="ir.actions.act_window">
            <field name="name">ACAD teacher</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">acad.teacher</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
