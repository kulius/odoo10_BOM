<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="tea_assets" inherit_id="web.assets_frontend" name="Tea Assets">
            <xpath expr="." position="inside">
                <link href="/tea_backend_theme/static/src/css/login-page-font.css" rel="stylesheet" type="text/css"/>
                <link href="/tea_backend_theme/static/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet"
                      type="text/css"/>
                <link href="/tea_backend_theme/static/lib/simple-line-icons/simple-line-icons.min.css" rel="stylesheet"
                      type="text/css"/>
                <link href="/tea_backend_theme/static/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet"
                      type="text/css"/>
                <link href="/tea_backend_theme/static/lib/bootstrap-switch/css/bootstrap-switch.min.css"
                      rel="stylesheet" type="text/css"/>
                <link href="/tea_backend_theme/static/src/css/components.css" rel="stylesheet" id="style_components"
                      type="text/css"/>
                <link href="/tea_backend_theme/static/src/css/plugins.css" rel="stylesheet" type="text/css"/>
                <link href="/tea_backend_theme/static/lib/select2/css/select2.min.css" rel="stylesheet"
                      type="text/css"/>
                <link href="/tea_backend_theme/static/lib/select2/css/select2-bootstrap.min.css" rel="stylesheet"
                      type="text/css"/>
                <link href="/tea_backend_theme/static/src/css/login.css" rel="stylesheet" type="text/css"/>

            </xpath>

        </template>

        <template id="tea_login_layout" inherit_id="web.login_layout" name="Tea Login Layout">
            <xpath expr="//t[@t-set='body_classname']" position="replace">
                <t t-set="body_classname" t-value="' login'"/>
            </xpath>

            <xpath expr="//div[@class='row']" position="replace">
                <div class="logo">
                    <a>
                        <img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}"/>
                    </a>
                </div>
                <div class="content">
                    <form class="login-form" role="form" t-attf-action="/web/login{{ '?debug' if debug else '' }}"
                          method="post" onsubmit="this.action = this.action + location.hash">
                        <h3 class="form-title">
                            <label for="login" class="control-label">Login to your account</label>
                        </h3>
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <div class="form-group" t-if="databases and len(databases) &gt; 1">
                            <label class="control-label visible-ie8 visible-ie9">Database</label>
                            <select name="db" id="db_list" class="form-control select2">
                                <option selected="selected" t-att-value="request.db">
                                    <label for="db" class="control-label">Database</label>
                                    :
                                    <t t-esc="request.db"/>
                                </option>
                                <option t-foreach="databases" t-as="db" t-att-value="db">
                                    <t t-esc="db"/>
                                </option>
                            </select>
                        </div>
                        <div class="alert alert-danger" t-if="error">
                            <button class="close" data-close="alert"></button>
                            <span>
                                <t t-esc="error"/>
                            </span>
                        </div>
                        <div class="alert alert-success" t-if="message">
                            <button class="close" data-close="alert"></button>
                            <span>
                                <t t-esc="message"/>
                            </span>
                        </div>
                        <div class="form-group">
                            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                            <label for="login" class="control-label visible-ie8 visible-ie9">Email</label>
                            <div class="input-icon">
                                <i class="fa fa-user"></i>
                                <input type="text" name="login" t-att-value="login" id="login"
                                       class="form-control placeholder-no-fix" required="required" autofocus="autofocus"
                                       autocapitalize="off"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="control-label visible-ie8 visible-ie9">Password</label>
                            <div class="input-icon">
                                <i class="fa fa-lock"></i>
                                <input type="password" name="password" id="password"
                                       class="form-control placeholder-no-fix" required="required"
                                       autocomplete="current-password" t-att-autofocus="'autofocus' if login else None"
                                       maxlength="4096"/>
                            </div>
                        </div>
                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                        <div class="form-actions">
                            <button type="submit" class="btn green pull-right">Log in</button>
                        </div>
                    </form>

                </div>
                <div class="copyright">
                    <a href="https://www.odoo.com" target="_blank">Powered by <span>Odoo</span></a>
                </div>

                <code style="display:none">
                    <![CDATA[
                        <!--[if lt IE 9]>
                        <script src="/tea_backend_theme/static/lib/respond.min.js"></script>
                        <script src="/tea_backend_theme/static/lib/excanvas.min.js"></script>
                        <script src="/tea_backend_theme/static/lib/ie8.fix.min.js"></script>
                        <![endif]-->

                        <script src="/tea_backend_theme/static/lib/jquery.min.js" type="text/javascript"></script>
                        <script src="/tea_backend_theme/static/lib/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>

                        <script src="/tea_backend_theme/static/lib/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
                        <script src="/tea_backend_theme/static/lib/jquery.blockui.min.js" type="text/javascript"></script>
                        <script src="/tea_backend_theme/static/lib/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>

                        <script src="/tea_backend_theme/static/lib/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
                        <script src="/tea_backend_theme/static/lib/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
                        <script src="/tea_backend_theme/static/lib/select2/js/select2.full.min.js" type="text/javascript"></script>
                        <script src="/tea_backend_theme/static/lib/backstretch/jquery.backstretch.min.js" type="text/javascript"></script>
                        <script src="/tea_backend_theme/static/lib/app/app.min.js" type="text/javascript"></script>
                        <script src="/tea_backend_theme/static/src/js/login.js" type="text/javascript"></script>
                    ]]>
                </code>
            </xpath>
        </template>
    </data>
</odoo>